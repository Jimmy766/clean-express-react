{
  "name": "billetera-virtual-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "client",
    "api-gateway", 
    "database-service"
  ],
  "scripts": {
    "setup": "npm run setup:env && npm run install:all",
    "setup:env": "cp .env.example .env && cp .env.example database-service/.env && cp .env.example api-gateway/.env",
    "install:all": "npm install && npm install --prefix client && npm install --prefix api-gateway && npm install --prefix database-service",
    "dev": "concurrently \"npm run dev --prefix client\" \"npm run dev --prefix api-gateway\" \"npm run dev --prefix database-service\"",
    "dev:client": "npm run dev --prefix client",
    "dev:gateway": "npm run dev --prefix api-gateway", 
    "dev:database": "npm run dev --prefix database-service",
    "start": "npm run dev",
    "build": "npm run build --prefix client && npm run build --prefix api-gateway && npm run build --prefix database-service",
    "check": "npm run check --prefix client && npm run check --prefix api-gateway && npm run check --prefix database-service",
    "test": "npm run test:api",
    "test:api": "echo 'Ejecutando pruebas de API...' && npm run health:check",
    "health:check": "curl -f http://localhost:3000/api/health && curl -f http://localhost:3001/api/health",
    "db:migrate": "npm run db:migrate --prefix database-service",
    "db:seed": "npm run db:seed --prefix database-service",
    "clean": "rm -rf node_modules client/node_modules api-gateway/node_modules database-service/node_modules",
    "reset": "npm run clean && npm run setup"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.511.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.3.0",
    "tailwind-merge": "^3.0.2",
    "zustand": "^5.0.3",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.4.1",
    "@vercel/node": "^5.3.6",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-dev-locator": "^1.0.0",
    "concurrently": "^9.2.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-trae-solo-badge": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
